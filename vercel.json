{
  "buildCommand": "npm ci --prefer-offline --no-audit --no-fund || npm install --prefer-offline --no-audit --no-fund --legacy-peer-deps && npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "devCommand": "npm run dev",
  "installCommand": "npm install --no-audit --no-fund --legacy-peer-deps --prefer-offline",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [
        {
          "type": "host",
          "value": "(?<domain>.*\\.)?vercel\\.app"
        }
      ],
      "destination": "https://$domain/$path",
      "permanent": true
    }
  ]
} 