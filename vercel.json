{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "buildCommand": "cd ai && npm run build",
  "outputDirectory": "ai/.next",
  "installCommand": "npm install",
  "redirects": [
    { "source": "/", "destination": "/ai" }
  ],
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/ai/$1" },
    { "source": "/api/(.*)", "destination": "/ai/api/$1" }
  ],
  "trailingSlash": false
} 